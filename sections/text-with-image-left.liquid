<div class="container">
    <div class="row margin-mobile shape--container no-gutters">
        {% if section.settings.bg_image != blank %}
        <img src="{{ section.settings.bg_image | img_url: '500x' }}" data-speed="2" class="shape--bg-image img-parallax">
        {% endif %}
        <div class="col-60 col-md-25">
            <div class="image-container">
                {% if section.settings.image != blank %}
                    <img data-aos="{{section.settings.image_animation}}" data-aos-duration="2000" class="image-fluid gym" src="{{ section.settings.image | img_url: '500x' }}">
                {% endif %}
            </div>
        </div>
        <div class="col-60 col-md-35 mt-5-pt-4">
            <h1 data-aos="{{section.settings.title_animation}}" data-aos-duration="2000" class="section-title">{{section.settings.title }}</h1>
            <div class="info-holder">
                {{ section.settings.text }}
            </div>
            {% if section.settings.button_url != blank and section.settings.button_text != blank %}
                <div class="find-button">
                    <a data-aos="{{section.settings.button_animation}}" data-aos-duration="2000" class="find-program home-button" href="{{section.settings.button_url}}">
                        <span>{{ section.settings.button_text }}</span>
                    </a>
                </div>
            {% endif %}
        </div> 
    </div>
</div>
