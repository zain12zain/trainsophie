<div class="container-fluid transformation-section">
    <div class="row">
        <div class="col-md-60 text-center text-container">
            {% if page.metafields.transformation_title.transformation_title != blank %}
                <h1 data-aos="{{section.settings.title_animation}}" data-aos-duration="2000" class="section-title-2 transformation-title">{{page.metafields.transformation_title.transformation_title}}</h1>
            {% endif %}
            {% if page.metafields.transformation_text.transformation_text != blank %}
            <p>{{page.metafields.transformation_text.transformation_text}}</p>
            {% endif %}
        </div>
    </div>
    <div class="slick-img">
            {% for item in page.metafields.transformation_slide.transformation_slide %}
            {{ item }}
            {% endfor %}
    </div>
</div>
