<div class="container-fluid transformation-section">
    <div class="row">
        <div class="col-md-60 text-center text-container">
            {% if section.settings.title != blank %}
                <h1 class="section-title-2 transformation-title">{{ section.settings.title }}</h1>
            {% endif %}
            {{ section.settings.text }}
        </div>
    </div>
    <div class="slick-img">
        {% for block in section.blocks %}
        {% if block.settings.link != blank %}
            <a href="{{block.settings.link}}">
        {% endif %}
        <div class="image-slider">
            <img src="{{ block.settings.image | img_url: '1000x' }}">
            <div class="text">
                {{ block.settings.link_text }}
            </div>
        </div>
        {% if block.settings.link != blank %}
        </a>
        {% endif %}
       {% endfor %}
    </div>
</div>
{% schema %}
{
  "name": "Transformation Section",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Heading"
    },
    {
        "type": "richtext",
        "id": "text",
        "label": "Text"
    }
  ],
  "blocks": [
    {
      "type": "transformation",
      "name": "Transformation",
      "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
        },
      {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
      },
      {
          "type": "url",
          "id": "link",
          "label": "Link"
      }
      ]
    }
  ]
}
{% endschema %}