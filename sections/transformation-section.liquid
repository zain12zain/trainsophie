<div class="container-fluid transformation-section">
    <div class="row">
        <div class="col-md-60 text-center text-container">
            {% if section.settings.title != blank %}
                <h1 data-aos="{{section.settings.title_animation}}" data-aos-duration="2000" class="section-title-2 transformation-title">{{ section.settings.title }}</h1>
            {% endif %}
            {{ section.settings.text }}
        </div>
    </div>
    <div class="slick-img">
        {% for block in section.blocks %}
        {% if block.settings.link != blank %}
            <a href="{{block.settings.link}}">
        {% endif %}
        <div class="image-slider">
            <img data-aos="{{block.settings.image_animation}}" data-aos-duration="2000" src="{{ block.settings.image | img_url: '1000x' }}">
            <div class="text">
                {{ block.settings.link_text }}
            </div>
        </div>
        {% if block.settings.link != blank %}
        </a>
        {% endif %}
       {% endfor %}
    </div>
</div>
