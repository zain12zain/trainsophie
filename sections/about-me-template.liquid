    <div class="row no-gutters">
        <div class="col-60 about-banner text-center">
            <h2 class="page-heading">
                {{ page.title }}
            </h2>
            {% if section.settings.bg_image_1 != blank %}
                <div class="about-1-container">
                    <img src="{{ section.settings.bg_image_1 | img_url: '400x' }}" data-speed="2" class="about-prallax-1 img-parallax">
                </div>
            {% endif %}
            {% if section.settings.bg_image_2 != blank %}
                <div class="about-2-container">
                    <img src="{{ section.settings.bg_image_2 | img_url: '400x' }}" data-speed="2" class="about-prallax-2 img-parallax">
